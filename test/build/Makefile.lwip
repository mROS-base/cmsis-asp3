LWIP_DIR := ../../../lwip
DRIVERS_DIR := ../../../drivers
APL_DIR := ../../../application


#APPL_CFG += atk2ext.cfg
#APPL_CFG += atk2ext_test.cfg

CDEFS += -DMROS2_LWIP_NO_STDDEF -DSTM32F767xx
CDEFS += -DosObjectsExternal

INCLUDES += -I$(LWIP_DIR)/src/include
INCLUDES += -I$(LWIP_DIR)/system
ifneq ($(TOPPERS_KERNEL),asp3)
INCLUDES += -I$(DRIVERS_DIR)/Inc
INCLUDES += -I$(DRIVERS_DIR)/Inc/Legacy
INCLUDES += -I$(DRIVERS_DIR)/CMSIS/Device/ST/STM32F7xx/Include
INCLUDES += -I$(DRIVERS_DIR)/CMSIS/Core/Include
endif
INCLUDES += -I$(APL_DIR)/include
ifneq ($(TOPPERS_KERNEL),asp3)
INCLUDES += -I$(APL_DIR)/include/asp
endif

APPLDIR	+= $(LWIP_DIR)/system/OS
APPLDIR	+= $(LWIP_DIR)/src/netif
APPLDIR	+= $(LWIP_DIR)/src/api
APPLDIR	+= $(LWIP_DIR)/src/core
APPLDIR	+= $(LWIP_DIR)/src/core/ipv4
ifneq ($(TOPPERS_KERNEL),asp3)
APPLDIR += $(DRIVERS_DIR)/Src
APPLDIR += $(DRIVERS_DIR)/Src/Legacy
endif
APPLDIR += $(APL_DIR)/src


APPL_COBJS	+= sys_arch.o
